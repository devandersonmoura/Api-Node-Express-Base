# Rename to .env and adjust as needed
PORT=3000
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=apiteste
JWT_SECRET=changeme-very-secret
JWT_EXPIRES_IN=1d

# Segurança HTTP
# Origens permitidas no CORS (separadas por vírgula). Use * apenas em dev.
CORS_ORIGINS=*
# Limite do body JSON
JSON_LIMIT=1mb
# Rate limit global: janela e máximo (padrões: 15m/100)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# Rate limit mais restrito para /api/auth (padrões: 1m/10)
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX=10

# Basic Auth para /docs (Swagger)
DOCS_BASIC_USER=admin
DOCS_BASIC_PASS=admin

# Logs: hosts confiáveis (não logar referer desses domínios/subdomínios)
# Ex.: seusite.com,admin.seusite.com
LOG_TRUSTED_HOSTS=

# Autenticação (refresh tokens e lockout)
REFRESH_TOKEN_EXPIRES_DAYS=7
AUTH_MAX_ATTEMPTS=5
AUTH_WINDOW_MINUTES=15
AUTH_LOCKOUT_MINUTES=15
